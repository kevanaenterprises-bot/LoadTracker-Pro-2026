# ─── Database ─────────────────────────────────────────────────────────────────
# Railway PostgreSQL connection string (automatically provided by Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# ─── Authentication ───────────────────────────────────────────────────────────
# Secret used to sign JWT tokens.  Must be a long, random string.
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER commit the real secret to version control.
JWT_SECRET=replace_with_a_long_random_secret

# ─── API URL (frontend) ───────────────────────────────────────────────────────
# Set to your Railway app URL in production; leave blank for local dev
VITE_API_URL=https://your-app.up.railway.app

# Optional: when set, frontend reads/writes directly from Supabase instead of /api/query
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ─── HERE Maps API Key ────────────────────────────────────────────────────────
HERE_API_KEY=your_here_api_key_here

# ─── Google Cloud Vision (OCR) ────────────────────────────────────────────────
VITE_GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key

# ─── Email (Outlook/SMTP) ─────────────────────────────────────────────────────
OUTLOOK_USER=your_outlook_email@outlook.com
OUTLOOK_PASSWORD=your_outlook_app_password
